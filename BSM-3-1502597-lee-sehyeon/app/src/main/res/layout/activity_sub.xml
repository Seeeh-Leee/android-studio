<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:background="#E0ACE6"
        android:padding="15dp"
        android:text="CHANGE THE PASSWORD"
         />

    <TextView
        android:id="@+id/checkbox"
        android:layout_width="382dp"
        android:layout_height="73dp"
        android:layout_marginHorizontal="15dp"
        android:padding="3dp"
        android:background="#43F0A0D0"
        ></TextView>

    <EditText
        android:id="@+id/change_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New password"
        android:layout_marginHorizontal="15dp"
        android:padding="15dp" />

    <EditText
        android:id="@+id/change_again"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Verify your password"
        android:layout_marginHorizontal="15dp"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/change_enter_button"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="80dp"
            android:text="Enter"
            />

        <Button
            android:id="@+id/home_button"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:text="Home"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="676dp"
        android:background="#E0ACE6"
        android:padding="15dp"
        android:text="SAVE THE SHORT MSG" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/note_enter"
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:hint="enter note in here"
            android:layout_marginHorizontal="15dp"
            android:padding="15dp"
            />

        <Button
            android:id="@+id/save_note"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="Save"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/note_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#f0d0d0"
        android:padding="15dp"
         />

</LinearLayout>